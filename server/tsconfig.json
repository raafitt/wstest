{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2018",
    "lib": [
      "ES6"
    ],
    "module": "NodeNext",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "**/__mocks__/*",
    "**/__tests__/*"
  ],
  "lib": [
    "esnext"
  ],
  "ts-node": {
    "esm": true
  }
}